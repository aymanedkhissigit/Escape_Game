<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EscapeGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="toolBar" >
        <!--This line changes the color of text in Toolbar-->
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">2</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/italien</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textColorPrimary">@android:color/holo_red_light</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gameColor</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@android:color/holo_red_dark</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowRadius">500</item>
        <item name="android:shadowDx">50</item>
        <item name="android:shadowDy">50</item>
    </style>

    <style name="ButtonStyle2" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@android:color/holo_red_light</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">15dp</item>
    </style>

<!--    <style name="ButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">-->
