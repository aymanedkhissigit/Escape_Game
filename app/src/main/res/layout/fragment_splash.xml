<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/tools"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.fragments.SplashFragment"
    android:background="@drawable/background_gradient">

    <ImageView
        android:id="@+id/animation_view_loader"
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/hand_of_blood"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/title_escape_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/italien"
        android:text="@string/escape_game"
        android:textColor="#c31432"
        android:textSize="75sp"
        android:shadowColor="@color/white"
        android:shadowRadius="8"
        android:shadowDx="6"
        android:shadowDy="3"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toBottomOf="@+id/animation_view_loader" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_loading"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="assets"
        app:lottie_loop="true" />

</androidx.constraintlayout.widget.ConstraintLayout>