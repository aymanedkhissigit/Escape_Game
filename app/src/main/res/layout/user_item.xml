<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="18dp"
    android:orientation="horizontal"
    android:background="@drawable/item_user_background"
    android:elevation="40dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icon_person"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:fontFamily="@font/lobster"
        android:text="default"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:letterSpacing="0.2"
        app:layout_constraintEnd_toStartOf="@+id/lottieAnimationReady"
        app:layout_constraintStart_toEndOf="@+id/icon_person"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationReady"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:scaleX="4"
        android:scaleY="4"
        android:scaleType="centerInside"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="get_ready.json"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationNotReady"
        android:layout_width="47dp"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerInside"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="not_ready.json"
        app:lottie_loop="true" />


</androidx.constraintlayout.widget.ConstraintLayout>